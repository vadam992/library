                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 200', () => pm.response.to.have.status(200));",
                  "const json = pm.response.json();",
                  "pm.test('Updated fields applied', function () {",
                  "  pm.expect(json.data.Title).to.eql('Postman Test Book (Updated)');",
                  "  pm.expect(String(json.data.PublishYear)).to.eql('2025');",
                  "  // IsAvailable lehet 0/1 stringként is visszajön",
                  "  pm.expect(['0', 0, false].includes(json.data.IsAvailable)).to.eql(true);",
                  "});"
                ]
