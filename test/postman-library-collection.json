        {
          "name": "POST /api/books (create) -> saves {{bookId}}",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Postman Test Book\",\n  \"author\": \"API Tester\",\n  \"publishYear\": 2024,\n  \"isAvailable\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/books",
              "host": ["{{baseUrl}}"],
              "path": ["api", "books"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "type": "text/javascript",
                "exec": [
                  "pm.test('Status 201', () => pm.response.to.have.status(201));",
                  "const json = pm.response.json();",
                  "pm.test('Created book returned', function () {",
                  "  pm.expect(json).to.have.property('data');",
                  "  pm.expect(json.data).to.have.property('ID');",
                  "});",
                  "pm.collectionVariables.set('bookId', String(json.data.ID));",
                  "console.log('Saved bookId:', pm.collectionVariables.get('bookId'));"
                ]
              }
            }
          ]
        },
        {
